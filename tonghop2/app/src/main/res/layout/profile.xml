<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFCC">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#FF9900"
            android:textStyle="bold"
            android:layout_marginLeft="30sp"
            android:layout_width="200dp"
            android:layout_height="310dp"
            android:text="HOME'SONG FOR U."
            android:textSize="66dp">
        </TextView>

        <ImageView
            android:layout_marginTop="70dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/anh1">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:drawableRight="@drawable/ic_baseline_music"
            android:drawableLeft="@drawable/ic_baseline_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38sp"
            android:text="Home'song help you make the most of your music. Sign up and text control of your profile"
            android:textSize="20sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="80dp"
                android:layout_width="100dp"
                android:layout_height="180sp"
                android:src="@drawable/anh4">
            </ImageView>
            <ImageView
                android:layout_marginLeft="40dp"
                android:layout_width="90dp"
                android:layout_height="190sp"
                android:src="@drawable/anh5">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="15sp"
                android:layout_marginLeft="80dp"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/anh6">
            </ImageView>
            <ImageView
                android:layout_marginLeft="40dp"
                android:layout_width="100dp"
                android:layout_height="200sp"
                android:src="@drawable/anh7">
            </ImageView>
            <Button
                android:id="@+id/bt_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="logout"
                android:background="#FF99"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>